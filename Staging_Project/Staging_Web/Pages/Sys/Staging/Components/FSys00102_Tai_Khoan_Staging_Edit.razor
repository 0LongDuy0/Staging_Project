@inherits FBase_Edit_Staging

<div class="modal fade show" tabindex="-1" role="dialog" aria-hidden="true" style="display: block; padding-left: 0px; background-color: rgba(10, 10, 10, .8);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-light">
                @if (r_iFBase_Edit_Auto_ID != 0)
                {
                    <h5 class="modal-title">Hiệu chỉnh</h5>
                }
                else
                {
                    <h5 class="modal-title">Thêm mới</h5>
                }
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="@(()=> Close_Edit())">
                </button>
            </div>

            @((MarkupString)r_strError)

            <EditForm Model="@m_objData">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">Tên Người Dùng</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.Ten_Nguoi_Dung" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">Mật Khẩu</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.Mat_Khau" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">Email</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.Email" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">CCCD</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.CCCD" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">SĐT</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.SĐT" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">Địa Chỉ</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.Dia_Chi" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-1">
                                <div class="col-lg-4 col-form-label">
                                    <label class="form-label">Ghi Chú</label>
                                </div>
                                <div class="col-lg-8">
                                    <input @bind="@m_objData.Ghi_Chu" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="@Save_Data">Lưu Thay Đổi</button>
            </div>
        </div>
    </div>
</div>

